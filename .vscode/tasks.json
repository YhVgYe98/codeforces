{
    "tasks": [
        {
            "type": "shell",
            "label": "C++: gcc 编译测试版",
            "command": "g++",
            "args": [
                "${fileBasename}",
                "-std=c++17",
                "-Wall",
                "-DDEBUG",
                "-g",
                "-o",
                "${fileBasenameNoExtension}_debug.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "生成调试程序"
        }
    ],
    "version": "2.0.0"
}